<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>User info</h1>
            
            <div class="error_explanation">
                <% if @user.errors.any? %>
                    <div class="h3 text-danger">
                        <%= @user.errors.count %>error prohibited this obj from being saved:
                    </div>
                    <ul class="text-danger">
                        <% @user.errors.full_messages.each do |message| %>
                             <li><%= message %></li>
                        <% end %>
                    </ul>
                <% end %>
            </div>
            
            <%= form_with model:@user,local:true do |f| %>
            <div class="form-group">
                <label for="user_name">Name</label>
    　           <%= f.text_field:name, autofocus: true, class:"form-control", id:"inputName" %>
    　       </div>
    　       <div class="form-group">
    　           <label for="user_image">Image</label>
    　           <%= f.attachment_field :profile_image, class: "w-100" %>
    　       </div>
    　      
    　       <div class="form-group">
    　           <label for="user_introduction">Introduction</label>
    　           <%= f.text_area:introduction,autofocus:true, class:"form-control", id:"inputName"  %>
    　       </div>
    　      
    　       <div class="form-group">
                <%= f.submit "Update User", class:"btn btn-secondary" %>
    　       </div>
    　       <% end %>
        </div>
    </div>
</div>