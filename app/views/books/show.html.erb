<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <h2>User info</h2>
            <table class="table">
                <%= attachment_image_tag @books.user,:profile_image, :fill,63,63, format:"jpeg", fallback:"no_image.jpg" %>
            </table>    
            <table class="table">
                <tbody>
                    <tr>
                        <th>name</th>
                        <th><%= @books.user.name %></th>
                        </tr>
                        <tr>
                        <th>introduction</th>
                        <th><%= @books.user.introduction %></th>
                    </tr>
                </tbody>
            </table>
    
        　　<div class="row">
                <%= link_to edit_user_path(@user.id) do %>
                    <div class="btn btn-outline-secondary btn-block fas fa-user-cog"></div>
                <% end %>
            </div>
        
        
            <h2 class="mt-3">New book</h2>
            <%=form_with model:@book,local:true do |f| %>
            <div class="form-group">
                <label for="book_title">Title</label>
                <%= f.text_field :title, class:"form-control" %>
            </div>
            <div class="form-group">
                <label for="book_opinion">Opinion</label>
                <%= f.text_area :body, class:"form-control" %>
            </div>
            <div class="form-group">
                <%= f.submit "Create Book",class:"btn btn-success" %>
            </div>
            <% end %>
        </div>
        
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
                <tbody>
                    <td>
                        <%= link_to user_path(@books.user) do %>
                            <%= attachment_image_tag @books.user,:profile_image, :fill,40,40, format:"jpeg", fallback:"no-image-2.jpg" %>
                            <br>
                            <%= @books.user.name %>
                        <% end %>
                    </td>
                    
                    <td>
                        <%= link_to book_path(@books) do %>
                            <%= @books.title %>
                        <% end %>
                    </td>
                    
                    <td>
                        <%= @books.body %>
                    </td>
                    <td>
                        <% if @user == current_user %>
                            <%= link_to "Edit",edit_book_path(@books), class:"btn btn-sm btn-success" %>
                        <% end %>
                    </td>
                    
                    <td>
                        <% if @user == current_user %>
                            <%= link_to "Destroy",book_path(@books), class:"btn btn-sm btn-danger" ,method: :delete, data:{confirm: "本当に消しますか？" } %>
                        <% end %>
                    </td>
                </tbody>
            </table>
        </div>
    </div>
</div>