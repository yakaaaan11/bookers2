<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header> <!--幅やサイズ未設定-->
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container h5">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="fas fa-home nav-link text-light">
              <%= link_to "Home",root_path %>
            </li>
            <li class="fas fa-users nav-link text-light">
              <%= link_to "Users",users_path %>
            </li>
            <li class="fas fa-book-open nav-link text-light">
              <%= link_to "Books",books_path %>
            </li>
            <li class="fas fa-sign-out-alt nav-link text-light">
              <%= link_to "Log out",destroy_user_session_path, method: :delete %>
            </li>
            <% else %>
            <li class="fas fa-link nav-link text-light">
              <%= link_to "Home",root_path %>
            </li>
            <li class="fas fa-link nav-link text-light">
              <%= link_to "About","home/about" %> <!--リンク先-->
            </li>
            <li class="fas fa-user-plus nav-link text-light">
              <%= link_to "Sign up",new_user_registration_path %>
            </li>
            <li class="fas fa-sign-in-alt nav-link text-light">
              <%= link_to "Log in",new_user_session_path %>
            </li>
            <% end %>
            </ul>  
        </div>
      </nav>
    </header>
    
    <%= yield %>
  </body>
</html>
